<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/size_9"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/setting_icon"
            android:layout_width="@dimen/size_28"
            android:layout_height="@dimen/size_28"
            android:layout_marginTop="@dimen/size_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/chat_wallpaper_ic"
            android:layout_marginStart="@dimen/size_16"/>

        <TextView
            android:id="@+id/setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/setting_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/size_4"
            android:layout_marginStart="@dimen/size_12"
            android:textSize="@dimen/textSize_17"
            android:fontFamily="@font/sf_pro_text_regular"
            android:text="@string/chat_wallpaper"/>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/size_0_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/C_E0E0E0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/size_55"
            app:layout_constraintTop_toBottomOf="@id/setting_title"
            android:layout_marginTop="@dimen/size_22"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
